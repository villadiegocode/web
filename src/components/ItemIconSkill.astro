---
import { Icon } from 'astro-icon/components';

interface Props{
    html: string,
    css: string,
    javascrit: string,
    angular: string,
    primeng: string,
    tailwind: string,
    astro: string,
    git: string,
    title: string,
    subtitle: string,
     
}

const {html, css, javascrit, angular, primeng, tailwind, astro, git, title, subtitle} = Astro.props;
---
<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 bg-[#a04747] rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-[#a04747]"></div>
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{title}</h3>
    <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">{subtitle}</p>
    <div class="flex flex-col gap-2 md:flex-row justify-start items-start">
        <div class="flex gap-2">
            <Icon name={html}/>
            <Icon name={css}/>
            <Icon name={javascrit}/>
            <Icon name={angular}/>
        </div>
        <div class="flex gap-2">
            <Icon name={primeng}/>
            <Icon name={tailwind}/>
            <Icon name={astro}/>
            <Icon name={git}/>
        </div>
    </div>
</li>

<style>
    [data-icon] {
        font-size: 2rem;
    }
    </style>