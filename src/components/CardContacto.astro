---
import { Icon } from 'astro-icon/components';
import { fade } from 'astro:transitions';

interface Props{
    nombre: string,
    telefno: string,
    email: string,
    cargo: string,
    direccion: string

}

const {nombre, telefno, email, cargo, direccion} = Astro.props;
---

<div transition:animate={fade({duration: '0.4s'})} class="max-w-2xl m-auto  bg-white border-2 border-black shadow-card overflow-hidden p-6 mt-8">
    <div class="flex items-center">
        <div>
            <h2 class="text-3xl font-semibold text-gray-800">{nombre}</h2>
            <p class="text-gray-600 text-xl">{cargo}</p>
        </div>
    </div>
    <div class="mt-4 space-y-2">
        <p class="flex items-center text-gray-600 text-lg">
            <Icon name='ubicacion' class="mr-1"></Icon>
            {direccion}
        </p>
        <p class="flex items-center text-gray-600 text-lg">
            <Icon name="email" class="mr-1"/>
            {email}
        </p>
        <p class="flex items-center text-gray-600 text-lg">
            <Icon name="cellphone" class="mr-1"/>
            {telefno}
        </p>
    </div>
</div>

<style>
    .shadow-card {
		box-shadow: 4px 4px black;

	}

    [data-icon] {
        font-size: 1.5rem;
    }
    </style>